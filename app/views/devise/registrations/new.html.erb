<div class="row justify-content-center">
  <div class="col-4 text-center">
    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse email" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe" %>
    </div>

    <div class="actions">
      <%= f.submit "Inscription", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>